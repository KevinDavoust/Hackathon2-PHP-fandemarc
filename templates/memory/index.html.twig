{% extends 'base.html.twig' %}

{% block title %}Memory index{% endblock %}

{% block body %}
    <h1>Memory index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Size</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for memory in memories %}
            <tr>
                <td>{{ memory.id }}</td>
                <td>{{ memory.size }}</td>
                <td>
                    <a href="{{ path('app_memory_show', {'id': memory.id}) }}">show</a>
                    <a href="{{ path('app_memory_edit', {'id': memory.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_memory_new') }}">Create new</a>
{% endblock %}
